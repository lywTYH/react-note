{
  "include": [
    "./rollup.config.ts",
    "./rollup.dts.config.ts",
    "src/node/__tests__",
    "src/types/shims.d.ts"
  ],
  "compilerOptions": {
    "esModuleInterop": true,
    "declaration": false,
    "resolveJsonModule": true,
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "useUnknownInCatchVariables": false
  }
}
